<%= form_tag(login_path, method: "post") do %>
<table>
<tr>    
    <td><%= "login:" %></td>
    <td><%= text_field_tag :user_name %><td>
</tr>
<tr>
    <td><%= "Password:" %></td>
    <td><%= password_field_tag :password %><td>
</tr>
<tr>    
    <td><%= submit_tag "Submit" %></td>
</tr>
</table>
<% end %>